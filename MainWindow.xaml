<Window x:Class="CalculatedSpeedometer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculatedSpeedometer"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        mc:Ignorable="d"
        Title="CalculatedSpeedometer" Height="450" Width="600">

    <StackPanel >
        <Frame x:Name="main" NavigationUIVisibility="Hidden" ></Frame>
        <TextBlock x:Name="greeting" TextWrapping="Wrap" FontSize="20">This application is a basic Positive Number calculator that then displays your result
as a value on a speedometer.</TextBlock>
        <Button x:Name="goToCalculator" Click="goToCalculator_Click" >Go to Calculator</Button>
        </StackPanel>
</Window>
