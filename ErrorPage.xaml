<Page x:Class="CalculatedSpeedometer.ErrorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CalculatedSpeedometer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ErrorPage">

    <StackPanel>
        <TextBlock x:Name="errorText" Height="40" FontSize="18" HorizontalAlignment="Center">Results less than zero can't be displayed</TextBlock>
        <Button x:Name="returnToCalculator" Click="returnToCalculator_Click" Width="250" Height="50" FontSize="15">Calculate Another Value</Button>
    </StackPanel>
</Page>
